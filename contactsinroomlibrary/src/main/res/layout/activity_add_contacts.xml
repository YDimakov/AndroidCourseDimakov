<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_blue_rectangle"
    android:id="@+id/constraintLayout">

    <CheckBox
        android:id="@+id/checkBoxEmail"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:button="@drawable/style_checkbox_email"
        android:text="@string/email"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/informationEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText"
        app:layout_constraintVertical_bias="0.349"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBoxPhone"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:button="@drawable/style_checkbox_phone"
        android:text="@string/phone"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/informationEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText"
        app:layout_constraintVertical_bias="0.809"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/newContactTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/style_white_rectangle"
        android:gravity="top"
        android:hint="@string/new_name"
        android:textSize="30sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp" />

    <EditText
        android:id="@+id/informationEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="296dp"
        android:background="@drawable/style_white_rectangle"
        android:gravity="top"
        android:hint="@string/new_phone_or_email"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>