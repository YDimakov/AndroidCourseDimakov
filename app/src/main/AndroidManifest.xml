        <activity
            android:name=".Activity.MainActivity"
            android:launchMode="singleTask" />

        <activity android:name=".Activity.AddAnimalActivity" />
        <activity
            android:name=".Activity.ListActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activity.RegistrationUserActivity"
