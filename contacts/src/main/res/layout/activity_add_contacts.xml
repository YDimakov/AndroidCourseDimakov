<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/buttonBackAddContact"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:drawablePadding="20dp"
            android:src="@drawable/ic_baseline_clear_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:paddingLeft="20dp"
            android:text="Add contact"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <View
            android:layout_width="157dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_style"
            android:src="@drawable/ic_baseline_person_24" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBoxPhone"
            android:layout_width="155dp"
            android:layout_height="41dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="24dp"
            android:text="Phone"

            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextNameAdd"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/textEmailOrPhoneAdd"
            android:layout_width="331dp"
            android:layout_height="61dp"
            android:layout_marginTop="80dp"
            android:hint="Введите телефон или почту"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.412"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxPhone" />

        <EditText
            android:id="@+id/TextNameAdd"
            android:layout_width="312dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:gravity="center|left"
            android:inputType="text"
            android:hint="Введите имя"
            android:textColor="@color/colorGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.752"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="59dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintEnd_toStartOf="@+id/TextNameAdd"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkBoxEmail"
            android:layout_width="155dp"
            android:layout_height="41dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="180dp"
            android:text="Email"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextNameAdd"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="43dp"
            android:layout_height="41dp"
            android:layout_marginTop="116dp"
            android:src="@drawable/ic_baseline_local_phone_24"
            app:layout_constraintEnd_toStartOf="@+id/checkBoxPhone"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="43dp"
            android:layout_height="41dp"
            android:layout_marginTop="172dp"
            android:src="@drawable/ic_baseline_email_24"
            app:layout_constraintEnd_toStartOf="@+id/checkBoxEmail"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="202dp"
            android:layout_height="62dp"
            android:background="@drawable/text_style_blue_rectangle"
            android:text="@string/add_contact"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>