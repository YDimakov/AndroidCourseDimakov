<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/buttonExidEditContact"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:drawablePadding="20dp"
            android:src="@drawable/ic_baseline_clear_24"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:paddingLeft="20dp"
            android:text="Edit contact"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal">
        <View
            android:layout_width="157dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_style"
            android:src="@drawable/ic_baseline_person_24" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="529dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/textNameEdit"
            android:layout_width="275dp"
            android:layout_height="41dp"
            android:layout_marginTop="44dp"
            android:gravity="center|left"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </EditText>

        <EditText
            android:id="@+id/textPhoneOrEmailEdit"
            android:layout_width="275dp"
            android:layout_height="41dp"
            android:layout_marginTop="36dp"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textNameEdit">

        </EditText>

        <Button
            android:id="@+id/SaveButtonEdit"
            android:layout_width="202dp"
            android:layout_height="62dp"
            android:background="@drawable/text_style_blue_rectangle"
            android:text="@string/edit_contact"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.704">

        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>